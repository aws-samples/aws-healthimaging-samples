CREATE OR REPLACE VIEW `full_series_view` as 
select issuer.issuerofpatientid, 
		patient.patientid ,
		patient.patientname ,
		patient.patientbirthdate ,
		patient.patientsex ,
		study.accessionnumber ,
		study.studyid ,
		study.studydate ,
		study.studytime ,
		study.studyinstanceuid ,
		study.studydescription ,
		study.referringphysicianname ,
		study.numberofstudyrelatedseries ,
		study.numberofstudyrelatedinstances,
		series.seriesinstanceuid ,
		series.modality ,
		series.seriesnumber ,
		series.seriesdescription ,
		series.bodypartexamined ,
		series.institutionname ,
		series.manufacturer ,
		series.protocolname ,
		series.laterality ,
		series.numberofseriesrelatedinstances 
		from patient inner join issuer on issuer.issuer_pkey = patient.issuer_pkey inner join study on study.patient_pkey = patient.patient_pkey inner join series on series.study_pkey  = study.study_pkey ;